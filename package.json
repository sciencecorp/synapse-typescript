{
  "name": "@sciencecorp/synapse",
  "version": "0.1.0",
  "description": "Client library and CLI for the Synapse API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "scripts",
    "src",
    "synapse-api"
  ],
  "scripts": {
    "dist": "npm run generate && npm run build",
    "build": "./scripts/build.sh",
    "clean": "rm -rf dist src/api",
    "demo": "node ./dist/demo.js",
    "discover": "node ./dist/demo.js discover",
    "generate": "./scripts/generate.sh",
    "lint": "tsc --noEmit && eslint --ext .ts,.tsx .",
    "postinstall": "git submodule update --init && npm run dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sciencecorp/synapse-client-typescript.git"
  },
  "author": "team@science.xyz",
  "bugs": {
    "url": "https://github.com/sciencecorp/synapse-client-typescript/issues"
  },
  "homepage": "https://github.com/sciencecorp/synapse-client-typescript#readme",
  "devDependencies": {
    "eslint": "^9.5.0",
    "protobufjs-cli": "^1.1.2",
    "typescript": "^5.5.2"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.10.10",
    "@grpc/proto-loader": "^0.7.13",
    "google-protobuf": "^3.21.2",
    "yargs": "^17.7.2"
  }
}
